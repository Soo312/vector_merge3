<Window x:Class="vector_merge3.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:vector_merge3"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Closed="Window_Closed"
        Title="Window1" Height="200" Width="300">
    <Grid Background="LightGray">
        <Grid>
            <Label x:Name="progress_text" Content="Waiting.." FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,38,0,0"/>
            <ProgressBar x:Name="progressbar" Width="200" Height="30" />
        </Grid>
        <Button Content="Cancle" Width="80" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Click="Button_Click" IsCancel="True" />
    </Grid>
</Window>
